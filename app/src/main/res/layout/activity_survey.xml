<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_gravity="center"
     android:gravity="center"
     android:orientation="vertical"
     android:layout_weight="1">

  <TextView
      android:id="@+id/one"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/pink"
      android:text="@string/question6"
      android:textSize="20sp"
      android:textStyle="normal"
      android:textColor="@color/black"/>

  <RadioButton
      android:id="@+id/Radio_Button_one"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@id/Radio_Button_two"
      android:layout_below="@id/one"
      android:text="@string/yes"
      android:textSize="18sp"/>

  <RadioButton
      android:id="@+id/Radio_Button_two"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/one"
      android:layout_alignParentEnd="true"
      android:text="@string/no"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/two"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/pink"
      android:layout_below="@id/Radio_Button_one"
      android:text="@string/question7"
      android:textSize="20sp"
      android:textStyle="normal"
      android:textColor="@color/black"/>

  <RadioButton
      android:id="@+id/Radio_Button_three"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/two"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/Radio_Button_four"
      android:text="@string/yes"
      android:textSize="18sp"/>

  <RadioButton
      android:id="@+id/Radio_Button_four"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/two"
      android:layout_alignParentEnd="true"
      android:text="@string/no"
      android:textSize="18sp"/>

  <TextView
      android:id="@+id/three"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/pink"
      android:layout_below="@id/Radio_Button_four"
      android:text="@string/question8"
      android:textSize="20sp"
      android:textStyle="normal"
      android:textColor="@color/black"/>

  <RadioButton
      android:id="@+id/Radio_Button_five"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/three"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/Radio_Button_six"
      android:text="@string/yes"
      android:textSize="18sp"/>

  <RadioButton
      android:id="@+id/Radio_Button_six"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/three"
      android:layout_alignParentEnd="true"
      android:text="@string/no"
      android:textSize="18sp"/>

  <TextView
      android:id="@+id/four"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/Radio_Button_six"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="130dp"
      android:background="@color/pink"
      android:text="@string/question9"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="normal" />

  <RadioButton
      android:id="@+id/Radio_Button_seven"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/four"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/Radio_Button_six"
      android:text="@string/yes"
      android:textSize="18sp"/>

  <RadioButton
      android:id="@+id/Radio_Button_eight"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/four"
      android:layout_alignParentEnd="true"
      android:text="@string/no"
      android:textSize="18sp"/>

 </RelativeLayout>

 <Button
     android:id="@+id/button1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:gravity="center"
     android:text="@string/send"
     android:textSize="16sp"
     android:textStyle="normal"
     android:backgroundTint="@color/white"
     android:textColor="@color/gray"
     tools:targetApi="lollipop" />

</LinearLayout>