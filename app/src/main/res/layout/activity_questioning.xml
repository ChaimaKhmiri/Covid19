<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher_background_foreground"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/survey"
        android:textColor="@color/green"
        android:textSize="35sp"
        android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:text="@string/question_one"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/Radio_Button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/Radio_Button_two"
            android:layout_below="@id/one"
            android:text="@string/yes"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/Radio_Button_two"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/one"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:layout_below="@id/Radio_Button_one"
            android:text="@string/question_two"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/Radio_Button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/Radio_Button_four"
            android:text="@string/yes"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/Radio_Button_four"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:layout_below="@id/Radio_Button_four"
            android:text="@string/question_three"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/Radio_Button_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/Radio_Button_six"
            android:text="@string/yes"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/Radio_Button_six"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:layout_below="@id/Radio_Button_six"
            android:text="@string/question_four"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/Radio_Button_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/four"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/Radio_Button_six"
            android:text="@string/yes"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/Radio_Button_eight"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/four"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:layout_below="@id/Radio_Button_seven"
            android:text="@string/question_five"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/Radio_Button_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/five"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/Radio_Button_eight"
            android:text="@string/yes"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/Radio_Button_ten"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/five"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/next"
        android:textSize="16sp"
        android:textStyle="normal"
        android:backgroundTint="@color/white"
        android:textColor="@color/green"
        tools:targetApi="lollipop" />

</LinearLayout>
