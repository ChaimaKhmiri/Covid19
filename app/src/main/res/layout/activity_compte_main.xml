<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ml"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:contentDescription="@string/logo2"
        android:padding="10dp"
        android:src="@drawable/logo2"
        tools:layout_gravity="right" />


    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_acount"
        android:textColor="@color/gray"
        android:textSize="35sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/lenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fec5d9"
        android:text="@string/name"
        android:textColor="#FFFFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:hint="@string/your_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fec5d9"
            android:text="@string/last_name"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/pren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:hint="@string/your_last_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/adreese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fec5d9 "
            android:text="@string/your_location"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:hint="@string/location"
            android:importantForAutofill="no"
            android:inputType="textPostalAddress"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fec5d9 "
            android:text="@string/login"

            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/votreemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="40"
            android:hint="@string/your_login"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/motdepasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fec5d9"
            android:text="@string/password"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:text="@string/confirmation"
            android:textSize="30sp"
            tools:ignore="LabelFor" />


        <TextView
            android:id="@+id/confirmerMotdePasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fec5d9 "
            android:text="@string/enter"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:ems="10"
            android:hint="@string/validate"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="@string/Save"
            android:textColor="@color/gray"
            android:textSize="30sp" />
    </LinearLayout>



